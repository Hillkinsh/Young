}

.bdr-top:before {
    height: 1px;
    content: '';
    width: 100%;
    border-bottom: 1px solid #f0f0f0;
    position: absolute;
    top: -1px;
    right: 0;
    transform: scaleY(0.5);
    z-index: 10;
}

.bdr-bottom:after {
    height: 1px;
    content: '';
    width: 100%;
    border-top: 1px solid #f0f0f0;
    position: absolute;
    bottom: -1px;
    right: 0;
    transform: scaleY(0.5);
    z-index: 10;
}

